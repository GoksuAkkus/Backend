+        [HttpGet("GetMaksAcikAdresWithAdresNo")]
+        public async Task<MaksGeriDonusDegerleri> GetMaksAcikAdresWithAdresNo(string adresNo)
+        {
+            MaksGeriDonusDegerleri maksResult = new MaksGeriDonusDegerleri();
+            MaksGeriDonusDegerleri.ErrorDescription errorDesc = new MaksGeriDonusDegerleri.ErrorDescription();
+            maksResult.error = errorDesc;
+
+            var giris = new ServiceMernis.KullaniciGiris();
+            giris.UserName = "mebcbs";
+            giris.Password = "9UFdAy7x";
+
+            var logClient = new ServiceMernis.LogClient();
+            logClient.EkranKodu = "1";
+            logClient.Aciklama = "MebCbsAnka";
+            logClient.ModulKodu = "1";
+
+            logClient.YetkiliIPAdresi = "10.30.1.244";
+            logClient.YetkiliKullaniciAdi = "1234567910";
+            logClient.YetkiliKullaniciNo = 1234567910;
+            logClient.YetkiliTCKimlikNo = 44257273824;
+
+            long parsedAdresNo = 0;
+            var parseState = long.TryParse(adresNo, out parsedAdresNo);
+
+            if (parseState)
+            {
+                var kriter = new ServiceMernis.AcikAdresSorguKriter();
+                kriter.AdresNo = parsedAdresNo;
+
+                var client = new ServiceMernis.AksAcikAdresServisClient();
+                ServiceMernis.AcikAdresSonucu response = await client.AcikAdresBilgiGetirAsync(kriter, giris, logClient);
+
+                if (response != null)
+                {
+                    ServiceMernis.AcikAdres[] sorguSonucu = response.SorguSonucu;
+                    if (sorguSonucu != null)
+                    {
+                        if (sorguSonucu.Length > 0)
+                        {
+                            var acikAdres = sorguSonucu[0].Aciklama;
+                            if (acikAdres != null)
+                            {
+                                maksResult.acikAdresWithAdresNo = acikAdres;
+                                return maksResult;
+                            }
+                            else
+                            {
+                                var hataBilgisi = sorguSonucu[0].HataBilgisi;
+                                if (hataBilgisi != null)
+                                {
+                                    if (hataBilgisi.Aciklama != null)
+                                    {
+                                        maksResult.error.code = 1;
+                                        maksResult.error.description = "HATA CODE: #" + maksResult.error.code + "Aciklama (Açık Adres) Null Geldi.";
+                                        maksResult.error.maksDescription = hataBilgisi.Aciklama;
+                                    }
+
+                                }
+                                else
+                                {
+                                    maksResult.error.code = 1;
+                                    maksResult.error.description = "HATA CODE: #" + maksResult.error.code + "Aciklama (Açık Adres) Null Geldi.";
+                                }
+                            }
+                        }
+                        else
+                        {
+                            maksResult.error.code = 2;
+                            maksResult.error.description = "HATA CODE: #" + maksResult.error.code + "Sorgu Sonucu Boş Geldi";
+                        }
+                    }
+                    else
+                    {
+                        maksResult.error.code = 3;
+                        maksResult.error.description = "HATA CODE: #" + maksResult.error.code + "Sorgu Sonucu Null Geldi.";
+                    }
+
+
+                    return maksResult;
+                }
+                else
+                {
+                    maksResult.error.code = 0;
+                    maksResult.error.description = "HATA CODE: #" + maksResult.error.code + " AcikAdresBilgiGetirAsync Sonuç Vermedi.";
+                    return maksResult;
+                }
+            }
+            else
+            {
+
+                maksResult.error.code = -1;
+                maksResult.error.description = "HATA CODE: #" + maksResult.error.code + " Adres No: " + adresNo + " Parse Edilemedi. ";
+                return maksResult;
+            }
+        }
