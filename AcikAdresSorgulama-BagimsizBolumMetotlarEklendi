+        [HttpGet("GetAdresNoFromKimlikNo")]
+        public async Task<MaksGeriDonusDegerleri> GetAdresNoFromKimlikNo(string yapiKimlikNo)
+        {
+            // yapiKimlikNo = binaNo
+            MaksGeriDonusDegerleri maksResult = new MaksGeriDonusDegerleri();
+            List<MaksGeriDonusDegerleri.BagimsizBolumBina> binaArray = new List<MaksGeriDonusDegerleri.BagimsizBolumBina>();
+            MaksGeriDonusDegerleri.ErrorDescription errorDesc = new MaksGeriDonusDegerleri.ErrorDescription();
+            maksResult.error = errorDesc;
+
+            var giris = new ServiceMernis.KullaniciGiris();
+            giris.UserName = "mebcbs";
+            giris.Password = "9UFdAy7x";
+
+            var logClient = new ServiceMernis.LogClient();
+            logClient.EkranKodu = "1";
+            logClient.Aciklama = "MebCbsAnka";
+            logClient.ModulKodu = "1";
+
+            logClient.YetkiliIPAdresi = "10.30.1.244";
+            logClient.YetkiliKullaniciAdi = "1234567910";
+            logClient.YetkiliKullaniciNo = 1234567910;
+            logClient.YetkiliTCKimlikNo = 44257273824;
+
+            int parsedyapiKimlikNo = 0;
+            var parseState = int.TryParse(yapiKimlikNo, out parsedyapiKimlikNo);
+
+            if (parseState)
+            {
+                var binaNoKriter = new ServiceMernis.AksOkuBagimsizBolumBinaNoSorguKriter();
+
+                binaNoKriter.BinaNo = parsedyapiKimlikNo;
+
+                var binaNoServisClient = new ServiceMernis.AksOkuBagimsizBolumBinaNoServisClient();
+
+                var response = await binaNoServisClient.BinaNodanBagimsizBolumListeleAsync(binaNoKriter, giris, logClient);
+
+                if (response.SorguSonucu.Length > 0)
+                {
+                    for (var i = 0; i < response.SorguSonucu.Length; i++)
+                    {
+                        var bina = response.SorguSonucu[i];
+                        var bagimsizBolumBina = new MaksGeriDonusDegerleri.BagimsizBolumBina();
+                        var hataBilgisi = response.SorguSonucu[i].HataBilgisi;
+
+                        if (hataBilgisi == null)
+                        {
+                            long? adresNo = bina.AdresNo != null ? bina.AdresNo: 0;
+                            long? binaKodu = bina.BinaKodu != null ? bina.BinaKodu : 0;
+                            int? binaNo = bina.BinaNo != null ? bina.BinaNo : 0;
+                            string icKapiNo = bina.IcKapiNo != null ? bina.IcKapiNo : "";
+
+                            bagimsizBolumBina.adresNo = adresNo;
+                            bagimsizBolumBina.binaKodu = binaKodu;
+                            bagimsizBolumBina.binaNo = binaNo;
+                            bagimsizBolumBina.icKapiNo = icKapiNo;
+                            bagimsizBolumBina.hataBilgisi = "";
+                            binaArray.Add(bagimsizBolumBina);
+
+                        }
+                        else
+                        {
+                            bagimsizBolumBina.hataBilgisi = hataBilgisi.Aciklama;
+                        }
+                    }
+                    maksResult.acikAdresWithBinaKoduArray = binaArray;
+                    return maksResult;
+                }
+                else
+                {
+                    maksResult.error.code = 2;
+                    maksResult.error.description = "HATA CODE: #" + maksResult.error.code + " Sorgu Sonucu Boş Geldi. ";
+                    return maksResult;
+                }
+            }
+            else
+            {
+                maksResult.error.code = -1;
+                maksResult.error.description = "HATA CODE: #" + maksResult.error.code + " Bina Kodu: " + yapiKimlikNo + " Parse Edilemedi. ";
+                return maksResult;
+            }
+        }
